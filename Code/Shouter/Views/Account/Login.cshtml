@model Shouter.Models.LoginViewModel
@using Shouter.Globalization
@{
    ViewBag.Title = Labels.LogIn;
}

<div class="col-sm-4 panel panel-default">

    <h2>@Labels.LogIn</h2>
    <p>
        @Labels.PleaseEnterYourMailAndPassword
    </p>
    <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>

    @if (ViewBag.Errors != null)
    {
        <p class="alert alert-danger">@ViewBag.Errors</p>
    }

    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.ValidationSummary(true, String.Empty, new { @class = "alert alert-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Mail, new { @class = "col-sm-5 control-label" })
            @Html.EditorFor(m => m.Mail, new { htmlAttributes = new { @placeholder = Labels.MailExample } })
            @Html.ValidationMessageFor(m => m.Mail)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-sm-5 control-label" })
            @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @placeholder = Labels.Password } })
            @Html.ValidationMessageFor(m => m.Password)
        </div>

        <div class="form-group text-right">
            <input type="submit" value="@Labels.LogIn" class="btn btn-primary" />
        </div>
    }
</div>
