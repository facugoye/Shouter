@using Shouter.Globalization

@if (Request.IsAuthenticated)
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@User.Identity.Name<span class="caret"></span></a>
        <ul class="dropdown-menu">
            <li>
                @Html.ActionLink(@Labels.LogOff, "LogOff", "Account")
            </li>
        </ul>
    </li>
}
else
{
    <li>
        @Html.ActionLink(@Labels.LogIn, "LogIn", "Account")
    </li>
}

